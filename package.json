{
  "name": "decant",
  "version": "0.5.0",
  "description": "CLI to clean noisy HTML and convert it to markdown for LLM context.",
  "type": "module",
  "private": true,
  "bin": {
    "decant": "./src/cli.ts"
  },
  "scripts": {
    "clean": "bun run src/cli.ts clean",
    "extract": "bun run src/cli.ts extract",
    "stats": "bun run src/cli.ts stats",
    "test": "bun test",
    "build:binary": "bun build src/cli.ts --compile --outfile dist/decant",
    "package:manifests": "bun run scripts/generate-package-manager-manifests.ts",
    "update-golden": "bun run scripts/update-golden.ts",
    "smoke-check": "bun run scripts/smoke-check.ts"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@opentui/core": "^0.1.79",
    "commander": "^14.0.1",
    "linkedom": "^0.18.12",
    "mammoth": "^1.11.0",
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "bun-types": "^1.3.0"
  }
}
